#!/usr/bin/env python3
"""Convenience wrapper for running parsers."""

import sys
import subprocess
from pathlib import Path

# Get the directory containing this script
script_dir = Path(__file__).parent

# Run the parser script
sys.exit(subprocess.call([
    sys.executable,
    str(script_dir / "parsers" / "run_parser.py")
] + sys.argv[1:]))
